<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white_background">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/logo"
            android:scaleType="fitCenter"
            android:paddingEnd="20dp"
            android:paddingStart="5dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/logo"
            android:paddingEnd="20dp"
            android:text="@string/app_title"
            android:textAlignment="textEnd"
            android:textColor="@color/font_header_black"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/title"
            android:layout_toEndOf="@id/logo"
            android:paddingEnd="10dp"
            android:text="@string/app_subtitle"
            android:textAlignment="textEnd"
            android:textColor="@color/font_header_black"

            android:textSize="12dp"
            tools:ignore="RtlSymmetry,SpUsage" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/font_header_black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/abv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_bar_white"
   android:background="@android:color/transparent"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/abv" />

        <Button
            android:id="@+id/ibu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_bar_white"
            android:background="@android:color/transparent"
            android:layout_weight="1"

            android:text="@string/ibu" />

        <Button
            android:id="@+id/ebc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_bar_white"
            android:background="@android:color/transparent"
            android:layout_weight="1"

            android:text="@string/ebc" />

        <Button
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_bar_white"
            android:background="@android:color/transparent"
            android:layout_weight="1"

            android:text="@string/fav" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"/>

        <View
            android:id="@+id/failureIcon"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/failure"
            android:layout_gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />
    </FrameLayout>
</LinearLayout>
